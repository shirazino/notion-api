    <script type="text/javascript">
      var title = <%-JSON.stringify(title)%>;
      var json = <%-JSON.stringify(json)%>;

            render("p", "Notion API", "display-1");
            render("h1", `Results in: ${title.results[0].properties.Name.title[0].plain_text}`);
            getTags(title);
            dropTable(json);



            function getTags(title){
                for (var j=0; j < title.results[0].properties.Tags.multi_select.length; j++){
                  render("p",`#${title.results[0].properties.Tags.multi_select[j].name}`, "", "tags");
              }
            }

